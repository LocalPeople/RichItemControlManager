<UserControl x:Class="UserUI.SectionShowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserUI"
             xmlns:xcui="clr-namespace:XcWpfControlLib.Control;assembly=XcWpfControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
        </Grid.RowDefinitions>

        <ComboBox Name="comboBox" Grid.Row="1" ItemsSource="{Binding}" DisplayMemberPath="Name" SelectionChanged="comboBox_SelectionChanged" />
        <Image Name="image" Grid.Row="2" Stretch="Uniform" Margin="0,2" />
        <xcui:RichItemsControl x:Name="richItemsControl" Grid.Row="3" Margin="0,2,0,0" />
    </Grid>
</UserControl>
